<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MywalletActivity">

    <ImageView
        android:id="@+id/image_wallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_156"
        android:background="@drawable/bg_qianbao"
        android:layout_marginTop="@dimen/dp_41"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/text_yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余额"
        android:layout_marginTop="@dimen/dp_69"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_18"
        android:textColor="#343434"
        />
    <TextView
        android:id="@+id/text_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000.00"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/text_yue"
        android:textSize="@dimen/sp_40"
        android:textColor="#343434"
        />
    <TextView
        android:id="@+id/pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费金额"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_below="@id/image_wallet"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        />
    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="22dp"
        android:background="#ccc"
        android:layout_toRightOf="@+id/pay_money"
        android:layout_below="@id/image_wallet"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_60"
        ></View>
    <TextView
        android:id="@+id/pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费时间"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/image_wallet"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_60"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/pay_xrecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pay_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        ></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>