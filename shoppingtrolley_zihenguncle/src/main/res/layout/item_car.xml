<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="@dimen/dp_5"
android:layout_marginBottom="@dimen/dp_5"
android:orientation="vertical"
    android:background="@drawable/item_style"
    >
<Button
    android:id="@+id/shop_car_del"
    android:layout_width="@dimen/dp_60"
    android:layout_height="@dimen/dp_97"
    android:background="#ff6600"
    android:text="删除"
    android:textColor="#fff"
    android:textSize="@dimen/sp_14" />
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/shopcar_relative"
    >
    <CheckBox
        android:id="@+id/checkbox_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_30"
        />
    <RelativeLayout
        android:layout_toRightOf="@+id/checkbox_goods"
        android:layout_width="@dimen/dp_292"
        android:layout_height="@dimen/dp_97"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_8"
        >
        <ImageView
            android:id="@+id/image_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/goods_name"
            android:layout_toRightOf="@+id/image_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="@dimen/sp_12"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_10"
            android:text="this is title"
            />
        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="#ff0606"
            android:layout_toRightOf="@id/image_pic"
            android:layout_alignBottom="@id/image_pic"
            android:text="this is price"
            />
        <jx.com.shoppingtrolley_zihenguncle.customview.ShopCar_add_minus
            android:id="@+id/customview_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_20"
            ></jx.com.shoppingtrolley_zihenguncle.customview.ShopCar_add_minus>
    </RelativeLayout>
</RelativeLayout>


</com.daimajia.swipe.SwipeLayout>
