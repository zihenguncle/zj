<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/login_register_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_register_background"
        />
    <ImageView
        android:id="@+id/login_icon_phone"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_160"
        android:src="@drawable/login_icon_phone"
        android:layout_marginLeft="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/login_edit_phonenum"
        android:layout_width="@dimen/dp_190"
        android:layout_height="@dimen/dp_30"
        android:hint="手机号"
        android:textSize="@dimen/sp_18"
        android:textColorHint="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_toRightOf="@+id/login_icon_phone"
        android:background="@null"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorWhite"
        android:inputType="number"
        android:maxEms="11"
        />
    
    <View
        android:id="@+id/view_phonenum_white"
        android:layout_width="@dimen/dp_280"
        android:layout_height="1dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/login_icon_phone"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        ></View>
    <ImageView
        android:id="@+id/login_icon_lock"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/login_icon_lock"
        android:layout_below="@+id/view_phonenum_white"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/login_edit_password"
        android:layout_width="@dimen/dp_190"
        android:layout_height="@dimen/dp_30"
        android:hint="登录密码"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorWhite"
        android:background="@null"
        android:layout_toRightOf="@+id/login_icon_lock"
        android:layout_below="@+id/view_phonenum_white"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="20dp"
        android:password="true"
        android:textColorHint="@color/colorWhite"
        android:inputType="number"
        />
    <ImageView
        android:id="@+id/login_icon_eye"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/login_icon_eye"
        android:layout_above="@id/view_password_white"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_toRightOf="@+id/login_icon_lock"
        android:layout_marginLeft="@dimen/dp_210"
        />

    <View
        android:id="@+id/view_password_white"
        android:layout_width="@dimen/dp_280"
        android:layout_height="1dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/login_edit_password"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        ></View>

    <CheckBox
        android:id="@+id/login_check_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_password_white"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:text="记住密码"
        android:textColor="@color/colorWhite"
        android:theme="@style/checkboxColor"
        android:textSize="@dimen/sp_14"
        />

    <TextView
        android:id="@+id/login_quick_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="快速注册"
        android:layout_below="@id/view_password_white"
        android:layout_toRightOf="@+id/login_check_remember"
        android:layout_marginLeft="@dimen/dp_135"
        android:layout_marginTop="@dimen/dp_26"
        android:textSize="@dimen/sp_14"
        />
    <Button
        android:id="@+id/login_button_login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@drawable/button_style"
        android:textColor="@color/colorButton_Text"
        android:textSize="@dimen/sp_18"
        />



</RelativeLayout>