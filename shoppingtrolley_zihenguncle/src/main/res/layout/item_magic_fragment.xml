<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="@dimen/dp_118"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_style">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_magic_image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_98"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:placeholderImage="@drawable/tab_home_bottom_gouwuche"
        />
    <TextView
        android:id="@+id/item_magic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_magic_image"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="this is title"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/item_magic_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/item_magic_image"
        android:layout_marginBottom="@dimen/dp_40"
        android:textColor="@color/colorRad"
        android:layout_marginRight="@dimen/dp_20"
        android:text="this is price"
        />
</RelativeLayout>
