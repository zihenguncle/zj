<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/head_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ff6600"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="购物车"
            android:gravity="center"
            android:textSize="@dimen/sp_25"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/shop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共件宝贝"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_27"

            />
    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/car_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_below="@+id/head_relative"
            android:layout_above="@+id/ll_shoppingCar_bottom"
            android:layout_marginTop="@dimen/dp_5"
            >
        </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_shoppingCar_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/car_all_chekbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:minHeight="64dp"
                android:paddingLeft="10dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:paddingRight="10dp"
                android:text="全选"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="合计:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorRad"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/car_go_to_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/goto_pay"
            android:gravity="center"
            android:text="结算(0)"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>
