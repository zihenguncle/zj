<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_style"
   android:backgroundTint="@color/colorGray"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/item_style"
        android:padding="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical"
        android:layout_below="@id/text_addre">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:text="收件人："
                android:layout_marginRight="@dimen/dp_34"/>
            <EditText
                android:id="@+id/popo_edit_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:text="手机号码："
                android:layout_marginRight="@dimen/dp_20"/>
            <EditText
                android:id="@+id/popop_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/sp_14"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    android:text="所在地区："
                    android:layout_marginRight="@dimen/dp_20"/>
                <EditText
                    android:id="@+id/popop_edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/image_next"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/common_btn_next"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:text="详细地址："
                android:textColorHint="@color/colorWhite"
                android:layout_marginRight="@dimen/dp_20"/>
            <EditText
                android:id="@+id/popup_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/sp_14"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:text="邮政编码："
                android:layout_marginRight="@dimen/dp_20"/>
            <EditText
                android:id="@+id/popup_edit_zipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/sp_14"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ccc"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>

     <Button
        android:id="@+id/true_update"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:text="确认修改"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:background="@drawable/address_style"
        />
    <Button
        android:id="@+id/true_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:text="放弃修改"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/linear"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@drawable/address_style"

        />
</RelativeLayout>
