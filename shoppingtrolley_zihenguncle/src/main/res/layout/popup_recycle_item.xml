<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/popop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="this is color"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/popop_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/line_view"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@+id/popop_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="this is address"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/popop_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is phone"
        android:layout_toLeftOf="@+id/line_view"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/colorWhite"
        />
    <View
        android:id="@+id/line_view"
        android:layout_width="@dimen/dp_0_1"
        android:layout_height="@dimen/dp_50"
        android:background="@color/colorWhite"
        android:layout_toLeftOf="@+id/text_checked"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"></View>
    <TextView
        android:id="@+id/text_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPink"
        android:text="选择"
        android:textSize="@dimen/sp_14"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        />

</RelativeLayout>
