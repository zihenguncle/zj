<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderActivity">

    <RelativeLayout
        android:id="@+id/order_head_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWhite"
        >
        <ImageView
            android:id="@+id/order_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/tp_back"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="确认订单"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_5"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address_relative"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@+id/order_head_relative"
        android:layout_centerHorizontal="true"
        android:background="@drawable/item_style"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/popop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="this is color"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/popop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/line_view"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@+id/popop_name"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:text="this is address"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/popop_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is phone"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/colorGray"
            />
        <ImageView
            android:id="@+id/popop_open"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_below="@+id/popop_address"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:src="@drawable/common_btn_drop"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/address_button"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@+id/order_head_relative"
        android:layout_centerHorizontal="true"
        android:background="@drawable/item_style"
        android:gravity="center"
        android:text="暂无收货地址   点击添加"
        android:textColor="@color/colorPink1"
        android:layout_marginTop="@dimen/dp_10"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/address_button"
        android:layout_above="@+id/linear"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/total_num"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="共0件商品,"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/total_price"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:text="共需要付款0元"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorGray"
            />
        <TextView
            android:id="@+id/car_go_to_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ff6600"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/colorWhite" />


    </LinearLayout>
</RelativeLayout>