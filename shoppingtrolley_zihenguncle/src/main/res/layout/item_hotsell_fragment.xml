<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_176"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/item_style"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hot_item_image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_99"
        android:layout_margin="@dimen/dp_10"
        app:placeholderImage="@drawable/tab_home_bottom_gouwuche"
        />
    <TextView
        android:id="@+id/hot_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/sp_12"
        android:text="this is title"
        android:layout_below="@id/hot_item_image"
        android:layout_marginBottom="@dimen/dp_10"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_85"
        />
    <TextView
        android:id="@+id/hot_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorRad"
        android:text="this is price"
        android:layout_below="@+id/hot_item_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
