<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyAddressActivity">

    <RelativeLayout
        android:id="@+id/address_head_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_5"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="我的收货地址"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="完成"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/sp_20"
            />
    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/address_head_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_above="@+id/address_new"
        android:layout_marginBottom="@dimen/dp_10"
        ></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/address_new"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:text="新增收货地址"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/address_style"
        />

</RelativeLayout>