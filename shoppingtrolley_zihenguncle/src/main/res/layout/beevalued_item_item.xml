<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_style"
    >

    <ImageView
        android:id="@+id/dee_image_pic"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/dee_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dee_image_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="text"
        android:textColor="#666"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/dee_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/dee_image_pic"
        android:layout_toRightOf="@id/dee_image_pic"
        android:text="text"
        android:textColor="#ff0606"
        android:textSize="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/dee_text_dee"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/dee_image_pic"
        android:text="去评价"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorWhite"
        android:background="@drawable/address_style"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        />


</RelativeLayout>
